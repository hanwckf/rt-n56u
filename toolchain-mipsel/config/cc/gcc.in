config CC_GCC_HAS_ARCH_OPTIONS
    bool

comment "archictecture-specific options"
    depends on CC_GCC_HAS_ARCH_OPTIONS

if ARCH_MIPS
source "config/cc/gcc.in.mips"
endif # ARCH_MIPS
