ifeq ($(HAVE_DOT_CONFIG),y)

all: pregen libs
libs: pregen

# In this section, we need .config
-include $(top_builddir).config.cmd

else # ifeq ($(HAVE_DOT_CONFIG),y)

all: menuconfig

headers:
	@echo "Need to make a config file first, run: make menuconfig"
	@false

