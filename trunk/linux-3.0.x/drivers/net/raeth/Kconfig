	config P4_MAC_TO_PHY_MODE
		bool "Giga_Phy (RGMII)"
	config P4_RGMII_TO_MAC_MODE
		bool "Giga_SW/iNIC (RGMII)"
	config P4_MII_TO_MAC_MODE
		bool "External_CPU (MII_RvMII)"
	config P4_RMII_TO_MAC_MODE
		bool "External_CPU (RvMII_MII)"
endchoice

