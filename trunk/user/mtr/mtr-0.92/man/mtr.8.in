.B \-6\c
]
[\c
.BI \-F \ FILENAME\c
]
[\c
.B \-\-report\c
]
[\c
.B \-\-report-wide\c
]
[\c
.B \-\-xml\c
]
[\c
.B \-\-gtk\c
]
[\c
.B \-\-curses\c
]
[\c
.BI \--displaymode \ MODE\c
]
[\c
.B \-\-raw\c
]
[\c
.B \-\-csv\c
]
[\c
.B \-\-json\c
]
[\c
.B \-\-split\c
]
[\c
.B \-\-no-dns\c
]
[\c
